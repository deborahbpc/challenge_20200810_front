<div class="container">
  <div class="side-info-box bg-light card-body shadow-sm r-border-card f-color d-flex justify-content-center align-content-center align-items-center mt-5 mb-5 pt-4">
    <h5><strong>Add products to our database by uploading a JSON file. You can also edit and delete products.</strong></h5>
  </div>
</div>

<div data-controller="table">

  <div class="container d-flex justify-content-center align-content-center align-items-center mt-5 mb-5">
    <div class="side-info-box bg-light card-body shadow-sm r-border-card f-color">
      <div class="row justify-content-center ">
        <div class="my-3 col-10">
          <form class="upload" data-remote="true">
            <div class="form-row align-items-center justify-content-center">
              <div class="col-auto">
                <label for="upload-file" class="btn btn-select btn-secondary my-2 my-sm-0 btn-search-left">Select your file</label>
                <input id="upload-file" class="upload-file border p-2" data-target="table.file" type="file" name="upload-file" accept=".json" required />
                <input type="text" name="file-box" id="file-box" class="file-box" placeholder="File" readonly="readonly" style="height: 38px;">
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-outline-secondary" id="upload-btn" data-action="click->table#upload">Upload your JSON file</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="container d-flex justify-content-center align-content-center align-items-center mt-5 mb-5">
    <div class="side-info-box bg-light card-body shadow-sm r-border-card f-color">
      <div class="row justify-content-center ">
        <div class="my-3 col-10">
          <div class="table-responsive">
            <table class="table table-striped border table-hover">
              <thead>
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">Type</th>
                  <th scope="col">Rating</th>
                  <th scope="col">Price</th>
                  <th scope="col">Created</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody id="products-list" data-lenght="0">
                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
